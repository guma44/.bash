export EDITOR="vim"
export LC_ALL="en_US.UTF-8"
export LANG="en_US"
export MANPAGER="less -X"
export HISTIGNORE="&pwd:* --hard HEAD"
export HISTCONTROL="ignoredups"
export HISTSIZE=100000                     # custom history size
export HISTFILESIZE=100000                 # custom history file size
shopt -s histappend
shopt -s checkwinsize

# case-insensitive globbing (used in pathname expansion)
shopt -s nocaseglob

#Keep multiline commands as one command in history
shopt -s cmdhist

# make ls colors nicer for certain files
LS_COLORS="$LS_COLORS:*.fa=01;33:*.ipynb=01;37:*.tab=92:*.bed=91:"
export LS_COLORS

